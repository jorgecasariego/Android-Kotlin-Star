<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/imagen_pelicula"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitCenter"
        android:layout_marginRight="5dp"
        android:padding="3dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/nombre_pelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mision Imposible"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/estreno_pelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Julio 27, 2018"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/sinopsis_pelicula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="En ocasiones, hasta las mejores intenciones pueden volverse contra nosotros. En “MISIÓN: IMPOSIBLE – FALLOUT” nos encontramos a Ethan Hunt (Tom Cruise) y su equipo…e"
            android:textSize="13sp"
            android:lineSpacingMultiplier="1.3"
            android:padding="3dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


</LinearLayout>